<iso:schema
        xmlns="http://purl.oclc.org/dsdl/schematron"
        xmlns:iso="http://purl.oclc.org/dsdl/schematron"
        queryBinding='xslt2'
        schemaVersion='ISO19757-3'>

  <iso:title>Validation for Update</iso:title>
  <iso:ns prefix='urn' uri='urn:riv:itintegration:registry:1'/>
  <iso:ns prefix='urn1' uri='urn:riv:itintegration:engagementindex:UpdateResponder:1'/>
  <iso:ns prefix='urn2' uri='urn:riv:itintegration:engagementindex:1'/>

  <!-- Rules for Requests with domain riv:financial:patientfees:exemption -->

  <iso:pattern id="Domain riv:financial:patientfees:exemption">
    <iso:rule context="urn2:engagement[urn2:serviceDomain='riv:financial:patientfees:exemption']">
      <iso:assert test="urn2:categorization='fpe-es'">categorization value for riv:financial:patientfees:exemption must be one of: 'fpe-es'</iso:assert>
      <iso:assert test="urn2:logicalAddress=urn2:sourceSystem">logicalAddress must equal sourceSystem for riv:financial:patientfees:exemption</iso:assert>
      <iso:assert test="urn2:businessObjectInstanceIdentifier='NA'">businessObjectInstanceIdentifier must be 'NA' for riv:financial:patientfees:exemption</iso:assert>
      <iso:assert test="urn2:clinicalProcessInterestId='NA'">clinicalProcessInterestId must be 'NA' for riv:financial:patientfees:exemption</iso:assert>
    </iso:rule>
  </iso:pattern>


</iso:schema>
